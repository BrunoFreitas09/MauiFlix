<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.Acao"
             Title="Acao">

    <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                         Source="acao_ford.jpg" x:Name="btnford"
                         Clicked="btnford_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="acao_frontline.jpg" x:Name="btnfrontline"
                             Clicked="btnfrontline_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                     Source="furiosos.jpg" x:Name="btnfuriosos"
                     Clicked="btnfuriosos_Clicked"/>


    </Grid>
</ContentPage>