<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.animacao"
             Title="animacao">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="animacao_croods.jpg" x:Name="btncroods"
                        Clicked="btncroods_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="animacao_divert.jpg" x:Name="bntmdivert"
                            Clicked="bntmdivert_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="animacao_sherek.jpg" x:Name="btnsherek"
                    Clicked="btnsherek_Clicked" />


    </Grid>
</ContentPage>