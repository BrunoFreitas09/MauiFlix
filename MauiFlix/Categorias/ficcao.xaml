<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.ficcao"
             Title="ficcao">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="ficcao_donzela.jpg" x:Name="btndonzela"
                        Clicked="btndonzela_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="ficcao_interestelar.jpg" x:Name="btninterestelar"
                            Clicked="btninterestelar_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="ficcao_elisium.jpg" x:Name="btnelisium"
                    Clicked="btnelisium_Clicked"/>


    </Grid>
</ContentPage>