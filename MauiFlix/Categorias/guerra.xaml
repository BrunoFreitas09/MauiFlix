<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.guerra"
             Title="guerra">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="guerra_assassinos.jpg" x:Name="btnassassinos"
                        Clicked="btnassassinos_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="guerra_nadanovo.jpg" x:Name="btnnadanovo"
                            Clicked="btnassassinos_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="guerra_ultimo.jpg" x:Name="btnultimo"
                    Clicked="btnassassinos_Clicked"/>


    </Grid>
</ContentPage>