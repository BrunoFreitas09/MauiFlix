<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.infantil"
             Title="infantil">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="infantil_panda.jpg" x:Name="btnpanda"
                        Clicked="btnpanda_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="infantil_toy.jpg" x:Name="btntoy"
                            Clicked="btntoy_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="infantil_up.jpg" x:Name="btnup"
                    Clicked="btnup_Clicked"/>


    </Grid>
</ContentPage>