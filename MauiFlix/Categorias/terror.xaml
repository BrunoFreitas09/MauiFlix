<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.terror"
             Title="terror">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="terror_telefone.jpg" x:Name="btntelefone"
                        Clicked="btntelefone_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="terror_panico.jpg" x:Name="btnpanico"
                            Clicked="btnpanico_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="terror_resident.jpg" x:Name="btnresident"
                    Clicked="btnresident_Clicked"/>


    </Grid>
</ContentPage>