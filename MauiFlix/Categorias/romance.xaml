<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.romance"
             Title="romance">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="romance_antesdevc.jpg" x:Name="btnantesdevc"
                        Clicked="btnantesdevc_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="romance_lugares.jpg" x:Name="btnlugares"
                            Clicked="btnlugares_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="romance_culpadasestrelas.jpg" x:Name="btnestrelas"
                    Clicked="btnestrelas_Clicked"/>


    </Grid>
</ContentPage>