<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.drama"
             Title="drama">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="drama_deusnaomorreu.jpg" x:Name="btndeus"
                        Clicked="btndeus_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="drama_misterioparis.jpg" x:Name="btnmisterio"
                            Clicked="btnmisterio_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="drama_pelafe.jpg" x:Name="btnpelafe"
                    Clicked="btnpelafe_Clicked"/>


    </Grid>
</ContentPage>