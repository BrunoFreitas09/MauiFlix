<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.documentario"
             Title="documentario">
    <Grid RowDefinitions="300, 300, 300"
                 ColumnDefinitions="*, *"
                 Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                        Source="documentario_senna.jpg" x:Name="btnsenna"
                        Clicked="btnsenna_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                            Source="documentario_racionais.jpg" x:Name="btnracionais"
                            Clicked="btnracionais_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0" 
                    Source="documentario_servidao.jpg" x:Name="btnservidao"
                    Clicked="btnservidao_Clicked"/>


    </Grid>
</ContentPage>