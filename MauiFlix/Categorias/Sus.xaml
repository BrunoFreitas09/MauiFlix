<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.Sus"
             Title="Sus">
    <Grid RowDefinitions = "300,300,300"
          ColumnDefinitions ="*,*,*"
          Padding="5">

        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                     Source="sus_batma.jpg" x:Name="btnbatma" 
                     Clicked="btnbatma_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                     Source="sus_batmavsupermen.jpg" x:Name="btnbatmavsupermen" 
                     Clicked="btnbatmavsupermen_Clicked"/>

        <ImageButton Aspect="AspectFill" Grid.Column="2" Grid.Row="0"
                     Source="sus_images.jpg" x:Name="btnimages"
                     Clicked="btnimages_Clicked"/>

    </Grid>
</ContentPage>