<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.Aventura"
             Title="Aventura">

    <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*, *"
                  Padding="5">
        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                                 Source="aventura_disney.jpg" x:Name="btndisney"
                                 Clicked="btndisney_Clicked" />

            <ImageButton Grid.Column="1" Grid.Row="0" Source="aventura_miranha.jpg"
                                 x:Name="btnmiranha" Clicked="btnmiranha_Clicked"/>

            <ImageButton Grid.Column="2" Grid.Row="0" Source="aventura_piratas.jpg"
                             x:Name="btnpiratas" Clicked="btnpiratas_Clicked" />


        </Grid>

</ContentPage>