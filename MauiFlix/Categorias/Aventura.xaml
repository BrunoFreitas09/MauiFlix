<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Categorias.Aventura"
             Title="Aventura">

    <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*, *"
                  Padding="5">
        <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                                 Source="aventura_topgun.jpg" x:Name="btntopgun"
                                 Clicked="btnTopGun_Clicked" />

            <ImageButton Grid.Column="1" Grid.Row="0" Source="aventura_capameri.jpg"
                                 x:Name="btncapAmeri" Clicked="btncapAmeri_Clicked"/>

            <ImageButton Grid.Column="2" Grid.Row="0" Source="aventura_tropaelite.jpg"
                             x:Name="btnTropaElite" Clicked="btnTropaElite_Clicked" />

            <ImageButton Grid.Column="3" Grid.Row="0" Source="tropaelite" 
                             x:Name="btnVerImagem" Clicked="btnVerImagem_Clicked" />
        </Grid>

</ContentPage>